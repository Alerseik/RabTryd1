        <TextBox x:Name="TB7" HorizontalAlignment="Left" Height="20" Margin="135,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Grid.ColumnSpan="3"/>
        <TextBox x:Name="TB9" HorizontalAlignment="Left" Height="173" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label Content="Группа:" HorizontalAlignment="Left" Height="26" Margin="15,41,0,0" VerticalAlignment="Top" Width="115"/>
        <Label Content="ФИО:" HorizontalAlignment="Left" Height="26" Margin="15,69,0,0" VerticalAlignment="Top" Width="115"/>
